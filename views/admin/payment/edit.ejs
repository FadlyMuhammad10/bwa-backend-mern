<%- include ../../partials/header.ejs %>
<!-- Navbar -->
<%- include ../../partials/navbar.ejs %>
<!-- /.navbar -->

<!-- Main Sidebar Container -->
<%- include ../../partials/sidebar.ejs %>

<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Nominal</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/nominal">Nominal</a></li>
            <li class="breadcrumb-item active">Ubah</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">
                Form ubah nominal &raquo; <%= nominal.coinName %>
              </h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form
              action="/nominal/edit/<%= nominal._id %>?_method=PUT"
              method="post"
            >
              <div class="card-body">
                <div class="form-group">
                  <label>Nama koin</label>
                  <select
                    class="form-control select2"
                    style="width: 100%"
                    name="coinName"
                    required
                  >
                    <option selected="selected">pilih koin</option>
                    <option value="Gold" <% if (nominal.coinName == "Gold") { %>
                     Selected
                    <% } %>>Gold</option>
                    <option value="Diamond" <% if (nominal.coinName == "Diamond") { %>
                     Selected
                    <% } %>>Diamond</option>
                    <option value="Jewel" <% if (nominal.coinName == "Jewel") { %>
                     Selected
                    <% } %>
                    >Jewel</option>
                  </select>
                </div>
                <div class="form-group">
                  <label for="coinQuantity">Jumlah kuantity</label>
                  <input
                    type="number"
                    name="coinQuantity"
                    class="form-control"
                    id="coinQuantity"
                    placeholder="Enter jumlah koin"
                    required
                    value="<%= nominal.coinQuantity %>"
                  />
                </div>
                <div class="form-group">
                  <label for="price">Harga</label>
                  <input
                    type="number"
                    name="price"
                    class="form-control"
                    id="price"
                    placeholder="Enter Harga koin"
                    required
                    value="<%= nominal.price %>"
                  />
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
          <!-- /.card -->

          <!-- /.card -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include ../../partials/footer.ejs %> <%- include ../../partials/js.ejs %>
